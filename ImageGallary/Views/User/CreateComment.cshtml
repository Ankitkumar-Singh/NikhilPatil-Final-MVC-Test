@model ImageGallary.Common.CommentViewModel

@{
    ViewBag.Title = "CreateComment";
}

<div class="container mt-5">
    <div class="col-sm-6 offset-sm-3">
        <div class="card shadow">
            <div class="card-header">
                <b>Add image comment</b>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">

                        <div class="form-group">
                            <img src="@Url.Content(Model.Image.Url)" id="@Model.Image.ImageId" value="@Model.Image.ImageTitle" width="480" />
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Comment.Comment1, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Comment.Comment1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Comment.Comment1, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="float-right">
                                <input type="submit" value="Add comment" class="btn btn-outline-primary" />
                            </div>
                            @Html.ActionLink("Cancel", "Index",null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>