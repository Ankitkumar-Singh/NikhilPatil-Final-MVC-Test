@model ImageGallary.Models.Image

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <div class="col-sm-6 offset-sm-3">
        <div class="card shadow">
            <div class="card-header">
                <h4>Are you sure you want to delete this image?</h4>
            </div>
            <div class="card-body">
                <div class="row mt-1">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.ImageTitle)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.ImageTitle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.OrderNo)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.OrderNo, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.Url)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        <img src="@Url.Content(Model.Url)" alt="@Model.ImageTitle" class="img-thumbnail" width="100" />
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.UploadDate)</b>
                    </div>
                    <div class="col-md-1">
                        :
                    </div>
                    <div class="col-md-5">
                        @Html.DisplayFor(model => model.UploadDate, new { @class = "form-control" })
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group mt-5">
                        <div class="float-right">
                            <input type="submit" value="Delete" class="btn btn-danger shadow" />
                        </div>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary shadow" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>